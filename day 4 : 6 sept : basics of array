/*ques 1: max and min in an array*/

int main(){
    int a[5] = {1,2,3,4,5};

    //finding largest element in aaray
    int max = INT16_MIN ; 
    
    for(int i=0 ; i<5 ; i++){
         if(a[i]>max){
         max= a[i];
        
        } 
    }
    cout<<"largest element: "<<max<<endl;

    //finding smallest element in array

    int min = INT16_MAX;
    for(int i=0 ; i<5 ; i++){
         if(a[i]<min){
         min= a[i];
        
        } 
    }
    cout<<"smallest element: "<<min<<endl;
    return 0;


}
